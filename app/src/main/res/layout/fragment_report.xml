<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_width="270dp"
        android:layout_marginRight="10dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="10">

        <Button
            android:id="@+id/btn_singlememberreport"
            android:text="@string/rep_mem_lzr"
            android:textSize="20dp"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_blue"
            android:layout_height="50dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:weightSum="10">
        <Button
            android:id="@+id/btn_dailymemberreport"
            android:text="@string/rep_daily_report"
            android:gravity="center"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_blue"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:weightSum="10">
        <Button
            android:id="@+id/btn_pay_report"
            android:text="@string/rep_pay_report"
            android:gravity="center"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_blue"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:weightSum="10">
        <Button
            android:id="@+id/btn_sell_report"
            android:text="@string/rep_socity_report"
            android:gravity="center"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_blue"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
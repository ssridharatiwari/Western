<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:text="@string/serial_no"
                android:id="@+id/lv_sno"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:textSize="17dp"
                android:layout_height="45dp"
                />

            <TextView
                android:text="@string/code"
                android:id="@+id/lv_code"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:textSize="17dp"
                android:layout_height="45dp"
                />


            <TextView
                android:text="@string/lw_name"
                android:id="@+id/lv_name"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="17dp"
                android:layout_height="45dp"
                />



            <TextView
                android:id="@+id/lv_mobile"
                android:text="@string/mobile"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="17dp"
                android:layout_height="45dp"
                />

        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/saved_listview"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/empty_saved_list"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="23sp"
            android:paddingTop="40dp"
            android:visibility="gone"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:text="No Information are saved yet
                             Please create your information"
            />
    </RelativeLayout>

</LinearLayout>
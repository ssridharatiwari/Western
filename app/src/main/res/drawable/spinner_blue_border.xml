<?xml version="1.0" encoding="utf-8"?><!--  res/drawable/rounded_edittext.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:padding="10dp"
            android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners
                android:bottomLeftRadius="@dimen/twenty"
                android:bottomRightRadius="@dimen/twenty"
                android:topLeftRadius="@dimen/twenty"
                android:topRightRadius="@dimen/twenty" />
            <stroke
                android:width="1dip"
                android:color="@color/grey_40" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="bottom|right"
            android:tint="@color/grey_40"
            android:src="@drawable/arrow_icon" />
        <padding
            android:bottom="25dp"
            android:left="0dp"
            android:right="0dp"
            android:top="5dp" />
    </item>
</layer-list>
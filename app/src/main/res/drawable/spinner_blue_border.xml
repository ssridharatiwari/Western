    </shape>
</item>
    <item >
        <bitmap android:gravity="bottom|right" android:src="@drawable/arrow_icon"/>
        <padding android:left="0dp"
            android:right="0dp"
            android:top="5dp"
            android:bottom="25dp" />
    </item>
    </layer-list>